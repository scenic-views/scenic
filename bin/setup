#!/bin/sh

set -e

gem install bundler --conservative
bundle check || bundle install

if [ -z "$CI" ]; then
  bundle exec appraisal install
fi

bundle exec rake dummy:db:create

if ! [ -z "$CI" ]; then
  rails -v | grep -q '5.'
  if [[ $? -eq 0 ]]; then
    bundle exec rake dummy:db:environment:set RAILS_ENV=test
  fi
fi
